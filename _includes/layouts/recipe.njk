---
layout: layouts/postbase.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>

  <h2>Ingredients</h2>

  {% if ingredients %}
  <section aria-label="{{ title }} ingredients">
    <ul>
    {% for ingredient in ingredients %}
      <li>{{ ingredient }}</li>
    {% endfor %}
    </ul>
  </section>
  {% endif %}

  <h2>Instructions</h2>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/recipes/' | url }}">‚Üê Recipes index</a>
</nav>